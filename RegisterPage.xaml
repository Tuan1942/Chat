<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chat.RegisterPage">
    <StackLayout>
        <Entry x:Name="UsernameEntry" Placeholder="Tài khoản"/>
        <Entry x:Name="FullnameEntry" Placeholder="Fullname"/>
        <Entry x:Name="PasswordEntry" Placeholder="Mật khẩu" IsPassword="True"/>
        <Entry x:Name="PasswordEntryConfirm" Placeholder="Xác nhận mật khẩu" IsPassword="True"/>
        <Button Text="Đăng ký" Clicked="OnRegisterClicked"/>
        <StackLayout HorizontalOptions="CenterAndExpand">
            <Label Text="Đã có tài khoản?"/>
            <Button Text="Đăng nhập" Clicked="LoginNav"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
