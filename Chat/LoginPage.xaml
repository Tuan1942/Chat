<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chat.LoginPage">
    <StackLayout>
        <Entry x:Name="UsernameEntry" Placeholder="Tài khoản"/>
        <Entry x:Name="PasswordEntry" Placeholder="Mật khẩu" IsPassword="True"/>
        <Button Text="Đăng nhập" Clicked="OnLoginClicked"/>
        <StackLayout HorizontalOptions="CenterAndExpand">
            <Label Text="Chưa có tài khoản?"/>
            <Button Text="Đăng ký" Clicked="RegisterNav"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
